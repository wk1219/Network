WindowManager:
    InfoWidget:
    MyPC_Disk:
    MyPC_Info:

<InfoWidget>:
    name: "info"

    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'shield.jpg'
                size: root.width, root.height
                pos: self.pos

        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)

            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - Network Info - "
                    color: 0,0,0,1
                    font_size: 50

                TextInput:
                    id: network_input
                    text: "Input"
                    size: 700, 50
                    size_hint: (None, None)

                Label:
                    id: host_label
                    text: "Host : " + root.host_info()
                    color: 0,0,0,1
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: ip_label
                    text: "IP : " + root.ipv4_info()
                    color: 0,0,0,1
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: ext_ip_label
                    text: "EXT IP : " + root.ext_ipv4_info()
                    color: 0,0,0,1
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: host_label
                    text: "Netmask : " + str(root.get_netmask())
                    color: 0,0,0,1
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: mac_label
                    text: "MAC : " + root.mac_info()
                    color: 0,0,0,1
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: loc_label
                    text: "Location : " + root.get_wps()
                    color: 0,0,0,1
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 30
                    markup: True
                    size: self.texture_size

            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50
                    on_press:
                        app.root.current = "info"
                Button:
                    text: "PC"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_disk"

<MyPC_Disk>:
    name: "mypc_disk"

    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'purple.jpg'
                size: root.width, root.height
                pos: self.pos

        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)

            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - My PC Disk Info - "
                    font_size: 50

                Label:
                    id: c_label
                    text: "Drive : " + root.drive
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: total_label
                    text: "Total Size : " + str(root.total()) + " GB"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: used_label
                    text: "Used Size : " + str(root.used()) + " GB"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: free_label
                    text: "Free Size : " + str(root.free()) + " GB"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: use_per_label
                    text: "Partition Using Percentage : " + str(root.partition_used()) + " %"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: serial_label
                    text: "Serial Number : " + str(root.media_serial())
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50
                    on_press:
                        app.root.current = "info"
                Button:
                    text: "Disk"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_disk"

                Button:
                    text: "PC"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_info"

<MyPC_Info>:
    name: "mypc_info"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - My PC Info - "
                    color: 0,0.7,1,1
                    font_size: 50

                Label:
                    id: os_name_label
                    text: "OS : " + root.os_name()
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: os_ver_label
                    text: "OS version : " + root.os_version()
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: proc_info_label
                    text: "Processor : \n" + root.process_info()
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: proc_archi_label
                    text: root.process_archi()
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: ram_label
                    text: "RAM : " + str(root.ram_size()) + " GB"
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size

                Label:
                    id: login_label
                    text: "Login ID : " + root.login_id()
                    size_hint: (None, None)
                    font_size: 30
                    markup: True
                    size: self.texture_size



            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50
                    on_press:
                        app.root.current = "info"
                Button:
                    text: "Disk"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_disk"

                Button:
                    text: "PC"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_info"