WindowManager:
    InfoWidget:
    Main:

<InfoWidget>:
    name: "info"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - Network Info - "
                    font_size: 50

                Label:
                    id: host_label
                    text: "Host : " + root.host_info()
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: ip_label
                    text: "IP : " + root.ip_info()
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: ext_ip_label
                    text: "EXT IP : " + root.ext_ip_info()
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 40
                    markup: True
                    size: self.texture_size

            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50

                Button:
                    text: "Main"
                    font_size: 50
                    on_press:
                        app.root.current = "main"

<Main>:
    name: "main"
    FloatLayout:

        BoxLayout:
            size: root.width, 100
            orientation: 'horizontal'
            size_hint: (None, None)

            Button:
                text: "Network"
                font_size: 50
                on_press:
                    app.root.current = "info"

            Button:
                text: "Main"
                font_size: 50
                on_press:
                    app.root.current = "main"
