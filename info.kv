WindowManager:
    InfoWidget:
    MyPC_Disk:
    MyPC_Info:

<InfoWidget>:
    name: "info"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - Network Info - "
                    font_size: 50

                Label:
                    id: host_label
                    text: "Host : " + root.host_info()
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: ip_label
                    text: "IP : " + root.ip_info()
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: ext_ip_label
                    text: "EXT IP : " + root.ext_ip_info()
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: mac_label
                    text: "MAC : " + root.mac_info()
                    size_hint: (None, None)
                    pos: root.width, root.height
                    font_size: 40
                    markup: True
                    size: self.texture_size

            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50

                Button:
                    text: "PC"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_disk"

<MyPC_Disk>:
    name: "mypc_disk"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - My PC Disk Info - "
                    font_size: 50

                Label:
                    id: total_label
                    text: "Total Size : " + str(root.total()) + " GB"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: used_label
                    text: "Used Size : " + str(root.used()) + " GB"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: free_label
                    text: "Free Size : " + str(root.free()) + " GB"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: free_label
                    text: "Partition Using Percentage : " + str(root.partition_used()) + " %"
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size


            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50

                Button:
                    text: "Disk"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_disk"

                Button:
                    text: "PC"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_info"

<MyPC_Info>:
    name: "mypc_info"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: " - My PC Info - "
                    font_size: 50

                Label:
                    id: total_label
                    text: "OS : " + root.os_name()
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size

                Label:
                    id: total_label
                    text: "OS version : " + root.os_version()
                    size_hint: (None, None)
                    font_size: 40
                    markup: True
                    size: self.texture_size




            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Network"
                    font_size: 50

                Button:
                    text: "Disk"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_disk"

                Button:
                    text: "PC"
                    font_size: 50
                    on_press:
                        app.root.current = "mypc_info"