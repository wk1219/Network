WindowManager:
    InfoWidget:

<InfoWidget>:
    name: "info"

    FloatLayout:
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)
            GridLayout:
                cols: 1
                padding: 50

                Label:
                    text: "Host : " + root.host_info()
                    font_size: 50

                Label:
                    text: "IP : " + root.ip_info()
                    pos: root.width, root.height
                    font_size: 50

                Label:
                    text: "EXT IP : " + root.ext_ip_info()
                    pos: root.width, root.height
                    font_size: 50


            BoxLayout:
                size: root.width, 100
                orientation: 'horizontal'
                size_hint: (None, None)

                Button:
                    text: "Video"
                    font_size: 50

                Button:
                    text: "Home"
                    font_size: 50
